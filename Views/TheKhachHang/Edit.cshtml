@model BaiTapNhom11.Models.TheKhachHang

@{
    ViewData["Title"] = "Edit";
}

<h1>Chào mừng đến với trang thẻ khách hàng cửa hàng sách BookKing</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaThe" />
            <div class="form-group">
                <label asp-for="MauThe" class="control-label"></label>
                <input asp-for="MauThe" class="form-control" />
                <span asp-validation-for="MauThe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
