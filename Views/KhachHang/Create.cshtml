@model BaiTapNhom11.Models.KhachHang

@{
    ViewData["Title"] = "Create";
}

<h1>Chào mừng đến với trang thông tin khách hàng cửa hàng sách BookKing</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKhachHang" class="control-label" >Mã Khách hàng</label>
                <input asp-for="MaKhachHang" class="form-control" value="@ViewBag.newID" />
                <span asp-validation-for="MaKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Tên khách hàng</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGioiTinh" class="control-label">Giới tính</label>
                <select asp-for="MaGioiTinh" class ="form-control" asp-items="ViewBag.MaGioiTinh"></select>
            </div>
            <div class="form-group">
                <label asp-for="SDT" class="control-label">Số điện thoại</label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaThe" class="control-label">Thẻ</label>
                <select asp-for="MaThe" class ="form-control" asp-items="ViewBag.MaThe"></select>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CMND" class="control-label">CCCD/CMND</label>
                <input asp-for="CMND" class="form-control" />
                <span asp-validation-for="CMND" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
