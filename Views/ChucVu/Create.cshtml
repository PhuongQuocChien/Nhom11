@model BaiTapNhom11.Models.ChucVu

@{
    ViewData["Title"] = "Create";
}

<h1>Chào mừng đến với trang chức vụ cửa hàng sách BookKing</h1>

<h4>ChucVu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaChucVu" class="control-label">Mã chức vụ</label>
                <input asp-for="MaChucVu" class="form-control" value="@ViewBag.newMaChucVu"/>
                <span asp-validation-for="MaChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenChucVu" class="control-label">Tên chức vụ</label>
                <input asp-for="TenChucVu" class="form-control" />
                <span asp-validation-for="TenChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
