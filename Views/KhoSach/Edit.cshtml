@model BaiTapNhom11.Models.KhoSach

@{
    ViewData["Title"] = "Edit";
}

<h1>Chào mừng đến với trang kho sách cửa hàng sách BookKing </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TenSach" />
            <div class="form-group">
                <label asp-for="TenSach" class="control-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayNhap" class="control-label"></label>
                <input asp-for="NgayNhap" class="form-control" />
                <span asp-validation-for="NgayNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaBan" class="control-label"></label>
                <input asp-for="DaBan" class="form-control" />
                <span asp-validation-for="DaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConLai" class="control-label"></label>
                <input asp-for="ConLai" class="form-control" />
                <span asp-validation-for="ConLai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
