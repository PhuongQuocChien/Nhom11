@model IEnumerable<BaiTapNhom11.Models.Sach>

@{
    ViewData["Title"] = "Index";
}

<h1>Chào mừng đến với trang Sách cửa hàng sách BookKing</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KhoSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamXuatBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TacGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KhoSach.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamXuatBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTien)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSach">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaSach">Xem</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSach">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
